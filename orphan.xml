<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2.0" method="upgrade">

    <name>COM_ORPHAN</name>
    <!-- The following elements are optional and free of formatting constraints -->
    <creationDate>March 2015</creationDate>
    <author>Ballyhoo LTD</author>
    <authorEmail>james@ballyhoo.co.uk</authorEmail>
    <authorUrl>http://www.ballyhoo.co.uk</authorUrl>
    <copyright>Copyright Info</copyright>
    <license>License Info</license>
    <!--  The version string is recorded in the components table -->
    <version>0.1.0</version>
    <!-- The description is optional and defaults to the name -->
    <description>Locates orphaned media</description>

    <administration>
        <!-- Administration Menu Section -->
        <menu link='index.php?option=com_orphan'>COM_ORPHAN_MENU</menu>
        <files folder="admin">
            <filename>index.html</filename>
            <filename>orphan.php</filename>
            <filename>controller.php</filename>
            <folder>views</folder>
            <folder>models</folder>
            
        </files>
        <languages folder="admin/language">
                <language tag="en-GB">en-GB/en-GB.com_orphan.ini</language>
                <language tag="en-GB">en-GB/en-GB.com_orphan.sys.ini</language>
            </languages>
    </administration>

</extension>